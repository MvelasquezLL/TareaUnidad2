<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".crudVeterinario">

    <ImageView
        android:id="@+id/btn_home3"
        android:layout_width="94dp"
        android:layout_height="97dp"
        android:layout_marginBottom="32dp"
        android:onClick="goVistaMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lista"
        app:srcCompat="@drawable/baseline_home_24" />

    <Button
        android:id="@+id/btn_insertar"
        android:layout_width="120dp"
        android:layout_height="134dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/agregar"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_home3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_insertar">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>