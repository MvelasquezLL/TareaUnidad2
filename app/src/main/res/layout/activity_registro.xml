<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <EditText
        android:id="@+id/txtCorreoReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Nombre de usuario"
        android:inputType="text"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/txtPassReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/txtPassReg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="51dp"
        android:ems="10"
        android:hint="Repita su contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_registrar2"
        app:layout_constraintStart_toStartOf="@+id/txtPassReg"
        app:layout_constraintTop_toBottomOf="@+id/txtPassReg" />

    <EditText
        android:id="@+id/txtPassReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/txtPassReg2"
        app:layout_constraintStart_toStartOf="@+id/txtCorreoReg"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoReg" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCorreoReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pata" />

    <Button
        android:id="@+id/btn_registrar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="47dp"
        android:backgroundTint="#3F51B5"
        android:text="Registrar"
        android:textSize="21dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver"
        app:layout_constraintStart_toStartOf="@+id/txtPassReg2"
        app:layout_constraintTop_toBottomOf="@+id/txtPassReg2" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#3F51B5"
        android:text="Volver"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_registrar2"
        app:layout_constraintTop_toBottomOf="@+id/btn_registrar2" />
</androidx.constraintlayout.widget.ConstraintLayout>